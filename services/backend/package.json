{
  "name": "online-chat-backend",
  "version": "0.0.0",
  "description": "Backend app for the online-chat project.",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build": "nest build",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "db:create": "sequelize db:create ${POSTGRES_DATABASE}",
    "db:migrate": "sequelize db:migrate",
    "db:seed-roles": "sequelize db:seed --seed primary-roles.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/sequelize": "^10.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "deepmerge": "^4.3.1",
    "dot-object": "^2.1.5",
    "express": "^4.21.1",
    "handlebars": "^4.7.8",
    "ms": "^2.1.3",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.0",
    "sequelize": "^6.37.4",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@types/bcrypt": "^5.0.2",
    "@types/dot-object": "^2.1.6",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/ms": "^0.7.34",
    "@types/nodemailer": "^6.4.16",
    "@types/sequelize": "^4.28.20",
    "eslint": "^9.12.0",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
